<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <include layout="@layout/include_actionbar_01" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/normal_20dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="@dimen/normal_24sp"
                android:text="@string/select_type"
                android:gravity="center"
                android:background="@color/small_green"
                android:padding="@dimen/normal_10dp"/>
            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_type"
                android:layout_width="match_parent"
                android:background="@color/white"
                android:layout_height="@dimen/normal_680dp"
                android:layout_marginTop="@dimen/normal_10dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/normal_20dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/small_green">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:layout_marginLeft="@dimen/normal_30dp"
                    android:textSize="@dimen/normal_24sp"
                    android:text="@string/serial_number"
                    android:layout_alignParentLeft="true"
                    android:gravity="center"
                    android:padding="@dimen/normal_10dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="@dimen/normal_24sp"
                    android:text="@string/material_name"
                    android:gravity="center"
                    android:layout_centerInParent="true"
                    android:padding="@dimen/normal_10dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="@dimen/normal_24sp"
                    android:text="@string/operate"
                    android:gravity="center"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/normal_30dp"
                    android:padding="@dimen/normal_10dp"/>
            </RelativeLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_material"
                android:layout_width="match_parent"
                android:background="@color/white"
                android:layout_height="@dimen/normal_680dp"
                android:layout_marginTop="@dimen/normal_10dp"/>
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:id="@+id/tv_add_new"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/new_add"
        android:background="@drawable/btn_selector_green"
        android:gravity="center"
        android:padding="@dimen/normal_20dp"
        android:textSize="@dimen/normal_40dp"
        android:textColor="@color/white"
        android:layout_marginLeft="@dimen/normal_20dp"
        android:layout_marginRight="@dimen/normal_20dp"
        android:layout_marginTop="@dimen/normal_10dp"/>
</LinearLayout>
