<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="@dimen/normal_100dp"
        android:padding="@dimen/normal_20dp"
        android:background="@color/colorPrimary"
        android:focusable="true"
        android:focusableInTouchMode="true">
        <ImageButton
            android:id="@+id/ib_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="@dimen/normal_50dp"
            android:background="@color/colorPrimary"
            android:src="@mipmap/ic_back"/>
        <ImageButton
            android:id="@+id/ib_main"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/normal_78dp"
            android:layout_toRightOf="@id/ib_back"
            android:background="@color/colorPrimary"
            android:src="@mipmap/ic_home"/>
        <EditText
            android:id="@+id/et_search"
            android:layout_width="@dimen/normal_600dp"
            android:layout_height="@dimen/normal_60dp"
            android:layout_centerInParent="true"
            android:hint="@string/please_input_name"
            android:textSize="@dimen/normal_24sp"
            android:textColor="@color/white"
            android:gravity="center"
            android:drawableLeft="@mipmap/ic_search"
            android:drawablePadding="@dimen/normal_5dp"
            android:textColorHint="@color/white"
            android:background="@drawable/circular_white_line"/>

        <TextView
            android:id="@+id/tv_connect_device"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/et_search"
            android:layout_marginLeft="@dimen/normal_20dp"
            android:textColor="@color/white"
            android:textSize="@dimen/normal_24dp"
            android:background="@drawable/circular_white_line"
            android:visibility="gone"
            android:layout_centerVertical="true"
            android:text="连接设备"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_date"
                android:gravity="right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="@dimen/normal_22sp"
                android:text="2017.08.02 星期三"/>
            <TextView
                android:id="@+id/tv_time"
                android:gravity="right"
                android:layout_width="match_parent"
                android:textColor="@color/white"
                android:textSize="@dimen/normal_22sp"
                android:layout_height="wrap_content"
                android:text="09:25"/>
        </LinearLayout>
</RelativeLayout>