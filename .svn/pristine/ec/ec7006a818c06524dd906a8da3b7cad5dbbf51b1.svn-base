<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/normal_74dp"
    android:textColor="@drawable/tag_text_color"
    android:background="@drawable/tag_selector_green_white_line">
    <TextView
        android:id="@+id/tv_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/normal_40dp"
        android:text="1"
        android:textSize="@dimen/normal_32sp"
        android:textColor="@color/color_666"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:layout_alignParentLeft="true"/>
    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/normal_40dp"
        android:text="料品1"
        android:textSize="@dimen/normal_32sp"
        android:textColor="@color/color_666"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:layout_alignParentRight="true"/>
</RelativeLayout>
