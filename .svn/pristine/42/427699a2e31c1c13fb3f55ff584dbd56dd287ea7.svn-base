<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_selected="true">
        <shape>
            <gradient android:angle="270" android:endColor="@color/color_999"
                android:startColor="@color/color_999" />
            <corners android:radius="4px" />
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape>
            <gradient android:angle="270" android:endColor="@color/color_999"
                android:startColor="@color/color_999"/>
            <corners android:radius="4px" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient android:angle="270" android:endColor="@color/small_green"
                android:startColor="@color/small_green"  />
            <corners android:radius="4px" />
        </shape>
    </item>
</selector>