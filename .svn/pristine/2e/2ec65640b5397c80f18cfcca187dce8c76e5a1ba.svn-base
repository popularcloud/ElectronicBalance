<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <include layout="@layout/include_actionbar_01" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/normal_20dp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:textSize="@dimen/normal_24sp"
                        android:text="@string/select_type"
                        android:gravity="center"
                        android:background="@color/small_green"
                        android:padding="@dimen/normal_10dp"/>
                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/rv_type"
                        android:layout_width="match_parent"
                        android:background="@color/white"
                        android:layout_height="@dimen/normal_400dp"
                        android:layout_marginTop="@dimen/normal_10dp"/>
            </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/normal_20dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/small_green">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:layout_marginLeft="@dimen/normal_30dp"
                    android:textSize="@dimen/normal_24sp"
                    android:text="@string/serial_number"
                    android:layout_alignParentLeft="true"
                    android:gravity="center"
                    android:padding="@dimen/normal_10dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="@dimen/normal_24sp"
                    android:text="@string/material_name"
                    android:gravity="center"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/normal_30dp"
                    android:padding="@dimen/normal_10dp"/>
            </RelativeLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_material"
                android:layout_width="match_parent"
                android:background="@color/white"
                android:layout_height="@dimen/normal_400dp"
                android:layout_marginTop="@dimen/normal_10dp"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/normal_20dp">
          <RelativeLayout
              android:layout_width="0dp"
              android:layout_weight="3"
              android:layout_height="@dimen/normal_340dp"
              android:background="@color/white">
              <TextView
                  android:id="@+id/tv_present_weight"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_alignParentLeft="true"
                  android:textSize="@dimen/normal_32sp"
                  android:textColor="@color/color_333"
                  android:layout_marginTop="@dimen/normal_48dp"
                  android:layout_marginLeft="@dimen/normal_56dp"
                  android:text="@string/present_weight"/>
              <TextView
                  android:id="@+id/tv_weight"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_centerHorizontal="true"
                  android:textSize="@dimen/normal_100sp"
                  android:textColor="@color/colorPrimary"
                  android:layout_marginTop="@dimen/normal_136dp"
                  android:text="55.00" />
              <TextView
                  android:id="@+id/tv_unit"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_toRightOf="@id/tv_weight"
                  android:layout_below="@id/tv_present_weight"
                  android:textSize="@dimen/normal_40sp"
                  android:textColor="@color/small_green"
                  android:layout_alignBaseline="@id/tv_weight"
                  android:layout_marginTop="@dimen/normal_10dp"
                  android:layout_marginLeft="@dimen/normal_50dp"
                  android:text="kg" />
              <TextView
                  android:id="@+id/tv_ok"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="@string/is_ok"
                  android:textSize="@dimen/normal_50sp"
                  android:layout_alignParentRight="true"
                  android:layout_alignParentBottom="true"
                  android:background="@drawable/btn_selector_green"
                  android:paddingTop="@dimen/normal_5dp"
                  android:paddingBottom="@dimen/normal_5dp"
                  android:paddingLeft="@dimen/normal_45dp"
                  android:paddingRight="@dimen/normal_45dp"
                  android:layout_marginRight="@dimen/normal_90dp"
                  android:layout_marginBottom="@dimen/normal_46dp"
                  android:textColor="@color/white"/>
          </RelativeLayout>
          <LinearLayout
              android:layout_width="0dp"
              android:layout_weight="1"
              android:layout_height="wrap_content"
              android:orientation="vertical"
              android:layout_marginLeft="@dimen/normal_30dp">
              <TextView
                  android:id="@+id/tv_setting_material"
                  android:layout_width="match_parent"
                  android:layout_height="@dimen/normal_100dp"
                  android:text="@string/setting_material"
                  android:textSize="@dimen/normal_40sp"
                  android:background="@drawable/btn_selector_green"
                  android:textColor="@color/white"
                  android:gravity="center"
                  android:padding="@dimen/normal_10dp"/>
              <TextView
                  android:id="@+id/tv_weight_data"
                  android:layout_width="match_parent"
                  android:layout_height="@dimen/normal_100dp"
                  android:text="@string/weight_data"
                  android:textSize="@dimen/normal_40sp"
                  android:background="@drawable/btn_selector_green"
                  android:textColor="@color/white"
                  android:layout_marginTop="@dimen/normal_20dp"
                  android:gravity="center"
                  android:padding="@dimen/normal_10dp"/>
              <TextView
                  android:id="@+id/tv_package"
                  android:layout_width="match_parent"
                  android:layout_height="@dimen/normal_100dp"
                  android:text="@string/my_package"
                  android:textSize="@dimen/normal_40sp"
                  android:background="@drawable/btn_selector_green"
                  android:textColor="@color/white"
                  android:layout_marginTop="@dimen/normal_20dp"
                  android:gravity="center"
                  android:padding="@dimen/normal_10dp"/>
          </LinearLayout>
    </LinearLayout>
</LinearLayout>
