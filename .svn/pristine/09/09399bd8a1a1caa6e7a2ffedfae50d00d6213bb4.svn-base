<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/normal_74dp"
    android:textColor="@drawable/tag_text_color"
    android:background="@drawable/tag_selector_green_white_line"
    android:orientation="horizontal">
    <TextView
        android:id="@+id/tv_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/color_333"
        android:layout_marginLeft="@dimen/normal_30dp"
        android:textSize="@dimen/normal_24sp"
        android:text="@string/serial_number"
        android:layout_alignParentLeft="true"
        android:gravity="center"
        android:padding="@dimen/normal_10dp"/>
    <TextView
        android:id="@+id/tv_name"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:textColor="@color/color_333"
        android:textSize="@dimen/normal_24sp"
        android:text="@string/material_name"
        android:gravity="center"
        android:layout_centerInParent="true"
        android:padding="@dimen/normal_10dp"/>
    <TextView
        android:id="@+id/tv_weight"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:textColor="@color/color_333"
        android:textSize="@dimen/normal_24sp"
        android:text="@string/net_weight"
        android:gravity="center"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/normal_30dp"
        android:padding="@dimen/normal_10dp"/>
    <TextView
        android:id="@+id/tv_staff_number"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:textColor="@color/color_333"
        android:textSize="@dimen/normal_24sp"
        android:text="@string/staff_number"
        android:gravity="center"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/normal_30dp"
        android:padding="@dimen/normal_10dp"/>
    <TextView
        android:id="@+id/tv_staff"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:textColor="@color/color_333"
        android:textSize="@dimen/normal_24sp"
        android:text="@string/staff"
        android:gravity="center"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/normal_30dp"
        android:padding="@dimen/normal_10dp"/>
    <TextView
        android:id="@+id/tv_time"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:textColor="@color/color_333"
        android:textSize="@dimen/normal_24sp"
        android:text="@string/time"
        android:gravity="center"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/normal_30dp"
        android:padding="@dimen/normal_10dp"/>
</LinearLayout>
